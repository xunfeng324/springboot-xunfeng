<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shirojwt.mapper.UserMapper">
    <insert id="register">
         INSERT INTO user (username,password,role)VALUES(#{username},#{password},#{role})
    </insert>
    <select id="getPassword" parameterType="String" resultType="String">
        SELECT password
        FROM user
        WHERE username = #{username}
    </select>

    <select id="getRole" parameterType="String" resultType="String">
        SELECT role
        FROM user
        WHERE username = #{username}
    </select>
    <select id="getPermissionList" resultType="java.lang.String">
        SELECT permission
        FROM role
        WHERE role = #{role}
    </select>


</mapper>